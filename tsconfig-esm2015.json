{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es2015",
        "moduleResolution": "node",
        "baseUrl": "./tmp",
        "rootDir": "./tmp",
        "outDir": "./tmp/esm2015",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "files": [
        "./tmp/public_api.ts"
    ],
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "ng-hello-world.js",
        "flatModuleId": "ng-hello-world"
    }
}